generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email String  @unique
  nickname  String @unique
  password  String
  roles Role[]

  @@map("user")
}

model Role {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key String @unique
  value String
  users User[]

  @@map("role")
}